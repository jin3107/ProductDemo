@model ProductDemo.ViewModels.ResetPasswordUserViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="container">
    <h2 class="mt-5">Reset Password for User</h2>
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-floating mb-3">
            <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" />
            <label asp-for="NewPassword">New Password</label>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary me-2">Reset Password</button>
            <a asp-action="Index" asp-controller="UserManagement" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
