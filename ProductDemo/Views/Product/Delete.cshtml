@model ProductDemo.Models.Product

<h2>Delete Product</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Are you sure you want to delete this product?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Product Id
            </dt>
            <dd class="col-sm-10">
                @Model.ProductId
            </dd>
            <dt class="col-sm-2">
                Product Name
            </dt>
            <dd class="col-sm-10">
                @Model.ProductName
            </dd>
            <dt class="col-sm-2">
                Price
            </dt>
            <dd class="col-sm-10">
                @Model.Price.ToString("C")
            </dd>
            <dt class="col-sm-2">
                Manufacturer
            </dt>
            <dd class="col-sm-10">
                @Model.Manufactor
            </dd>
            <dt class="col-sm-2">
                Product Category
            </dt>
            <dd class="col-sm-10">
                @Model.ProductCategory?.ProductTypeName
            </dd>
            <dt class="col-sm-2">
                Made In
            </dt>
            <dd class="col-sm-10">
                @Model.MadeIn
            </dd>
            <dt class="col-sm-2">
                Material
            </dt>
            <dd class="col-sm-10">
                @Model.Material
            </dd>
            <dt class="col-sm-2">
                Remaining Number
            </dt>
            <dd class="col-sm-10">
                @Model.RemainingNumber
            </dd>
        </dl>

        <form asp-action="Delete" asp-controller="Product" method="post">
            <input type="hidden" asp-for="ProductId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
