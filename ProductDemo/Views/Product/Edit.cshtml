@model ProductDemo.Models.Product

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title text-center mb-5">Edit Product</h2>
                <form method="post" asp-controller="Product" asp-action="Edit" enctype="multipart/form-data">
                    <div class="mb-3 row">
                        <label asp-for="ProductId" class="col-sm-4 col-form-label">Product Id</label>
                        <div class="col-sm-8">
                            <input class="form-control" readonly asp-for="ProductId" />
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="ProductName" class="col-sm-4 col-form-label">Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductName" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Image" class="col-sm-4 col-form-label">Image</label>
                        <div class="col-sm-8">
                            <input type="file" class="form-control" asp-for="Image" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Price" class="col-sm-4 col-form-label">Price</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Manufactor" class="col-sm-4 col-form-label">Manufacturer</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Manufactor" />
                            <span asp-validation-for="Manufactor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="ProductTypeId" class="col-sm-4 col-form-label">Product Category</label>
                        <div class="col-sm-8">
                            <select class="form-select" asp-for="ProductTypeId" asp-items="ViewBag.ProductCategories">
                                <option value="">Select Category</option>
                            </select>
                            <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="MadeIn" class="col-sm-4 col-form-label">Made In</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="MadeIn" />
                            <span asp-validation-for="MadeIn" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Material" class="col-sm-4 col-form-label">Material</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Material" />
                            <span asp-validation-for="Material" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="RemainingNumber" class="col-sm-4 col-form-label">Remaining Number</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="RemainingNumber" />
                            <span asp-validation-for="RemainingNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-8">
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
