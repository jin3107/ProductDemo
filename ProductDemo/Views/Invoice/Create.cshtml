@model ProductDemo.Models.Invoice

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-lg">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Hóa Đơn Mới</h2>
                <form method="post" asp-controller="Invoice" asp-action="Create">
                    <div class="mb-3 row">
                        <label asp-for="BuyerName" class="col-sm-4 col-form-label">Tên Người Mua</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="BuyerName" />
                            <span asp-validation-for="BuyerName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="ProductName" class="col-sm-4 col-form-label">Tên Sản Phẩm</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductName" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="ProductCategoryId" class="col-sm-4 col-form-label">Loại Sản Phẩm</label>
                        <div class="col-sm-8">
                            <select class="form-select" asp-for="ProductCategoryId" asp-items="ViewBag.ListType">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Price" class="col-sm-4 col-form-label">Giá Tiền</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="PurchaseDate" class="col-sm-4 col-form-label">Thời Gian Mua</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="PurchaseDate" />
                            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Quantity" class="col-sm-4 col-form-label">Số Lượng Mua</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Quantity" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="btn btn-primary">Tạo</button>
                        </div>
                        <div class="col-sm-4 d-grid">
                            <a class="btn btn-outline-secondary" asp-controller="Invoice" asp-action="Index">Hủy</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
