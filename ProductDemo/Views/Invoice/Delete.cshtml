@model ProductDemo.Models.Invoice

@{
    ViewData["Title"] = "Xóa Hóa Đơn";
}

<h2>@ViewData["Title"]</h2>

<h3>Bạn muốn Xóa Hóa Đơn này?</h3>
<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Người Mua
        </dt>
        <dd class="col-sm-10">
            @Model.BuyerName
        </dd>
        <dt class="col-sm-2">
            Tên Sản Phẩm
        </dt>
        <dd class="col-sm-10">
            @Model.ProductName
        </dd>
        <dt class="col-sm-2">
            Loại Sản Phẩm
        </dt>
        <dd class="col-sm-10">
            @Model.ProductCategory?.ProductTypeName
        </dd>
        <dt class="col-sm-2">
            Giá Tiền
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("C")
        </dd>
        <dt class="col-sm-2">
            Thời Gian Mua
        </dt>
        <dd class="col-sm-10">
            @Model.PurchaseDate.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Số Lượng Tồn
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="InvoiceId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
