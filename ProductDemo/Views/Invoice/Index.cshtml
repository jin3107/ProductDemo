@using ProductDemo.ViewModels
@model IEnumerable<ProductDemo.Models.Invoice>

<div class="container">
    <h2 class="text-center mb-5">Danh Sách các Hóa Đơn</h2>

    <div class="row mb-4">
        <div class="col">
            <form class="d-flex flex-row align-items-center flex-wrap" asp-action="Index" method="get">
                <label for="search" class="mx-2 my-1">Tìm Kiếm</label>
                <input type="search" class="form-control w-auto" id="search" name="search" value="@ViewData["CurrentFilter"]" placeholder="Search" />
                <button type="submit" class="btn btn-success mx-2">Go</button>
            </form>
        </div>
    </div>

    <table class="table table-striped table-bordered mt-4 text-center">
        <thead class="table-dark">
            <tr>
                <th>Tên Sản Phẩm</th>
                <th>Loại Sản Phẩm</th>
                <th>Giá Tiền</th>
                <th>Thời Gian Mua</th>
                <th>Số Lượng</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.ProductCategory?.ProductTypeName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.PurchaseDate.ToString("dd/MM/yyyy")</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.InvoiceId">Chỉnh Sửa</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.InvoiceId">Chi Tiết</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.InvoiceId">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
