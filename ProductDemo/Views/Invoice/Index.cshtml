@model IEnumerable<ProductDemo.Models.Invoice>

<div class="container">
    <h2 class="text-center mb-5">List of Invoices</h2>

    <div class="row mb-4">
        <div class="col">
            <a class="btn btn-primary mt-3" asp-controller="Invoice" asp-action="Create">Create New Invoice</a>
        </div>
        <div class="col">
            <form class="d-flex flex-row align-items-center flex-wrap" asp-action="Index" method="get">
                <label for="search" class="mx-2 my-1">Search</label>
                <input type="search" class="form-control w-auto" id="search" name="search" value="@ViewData["CurrentFilter"]" placeholder="Search" />
                <button type="submit" class="btn btn-success mx-2">Go</button>
            </form>
        </div>
    </div>

    <table class="table table-striped table-bordered mt-4">
        <thead class="table table-dark">
            <tr>
                <th>Buyer Name</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Purchase Date</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BuyerName</td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductCategory</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.PurchaseDate.ToString("MM/dd/yyyy")</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.InvoiceId">Edit</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.InvoiceId">Details</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.InvoiceId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
