@model ProductDemo.Models.ProductCategory

<h2>Delete Product Category</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Are you sure you want to delete this product category?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Product Type Id
            </dt>
            <dd class="col-sm-10">
                @Model.ProductTypeId
            </dd>
            <dt class="col-sm-2">
                Product Type Name
            </dt>
            <dd class="col-sm-10">
                @Model.ProductTypeName
            </dd>
        </dl>

        <form asp-action="Delete" asp-controller="Category" method="post">
            <input type="hidden" asp-for="ProductTypeId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
