@model ProductDemo.Models.ProductCategory

<h2>Xóa Loại Sản Phẩm</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Bạn muốn Xóa Loại Sản Phẩm này?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Id Loại Sản Phẩm
            </dt>
            <dd class="col-sm-10">
                @Model.ProductTypeId
            </dd>
            <dt class="col-sm-2">
                Tên Loại Sản Phẩm
            </dt>
            <dd class="col-sm-10">
                @Model.ProductTypeName
            </dd>
        </dl>

        <form asp-action="Delete" asp-controller="Category" method="post">
            <input type="hidden" asp-for="ProductTypeId" />
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
